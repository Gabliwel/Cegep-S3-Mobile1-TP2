<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.AddMovieActivity">

    <TextView
        android:id="@+id/lblAddMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/add_movie"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lblMovieName"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblMovieName"
        android:textColor="@android:color/white"
        android:text="@string/lbl_movie_name"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblAddMovie"
        app:layout_constraintBottom_toTopOf="@id/txtMoviePictureUrl"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblMoviePictureUrl"
        android:textColor="@android:color/white"
        android:text="@string/lbl_movie_url"
        app:layout_constraintStart_toStartOf="@id/lblMovieName"
        app:layout_constraintTop_toBottomOf="@id/txtMovieName"
        app:layout_constraintBottom_toTopOf="@id/txtMoviePictureUrl"    
    />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtMovieName"
        android:textColor="@android:color/white"
        android:hint="@string/edit_movie_name"
        android:textColorHint="@color/hintColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/lblMovieName"
        app:layout_constraintTop_toBottomOf="@id/lblMovieName"
        app:layout_constraintBottom_toTopOf="@id/lblMoviePictureUrl"
    />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtMoviePictureUrl"
        android:textColor="@android:color/white"
        android:hint="@string/edit_movie_url"
        android:textColorHint="@color/hintColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/lblMovieName"
        app:layout_constraintTop_toBottomOf="@id/txtMovieName"
        app:layout_constraintBottom_toTopOf="@id/imgMoviePicture"
    />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imgMoviePicture"
        android:src="@drawable/placeholder"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtMoviePictureUrl"
        app:layout_constraintBottom_toTopOf="@id/btnAddMovie"
        android:contentDescription="Movie image"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddMovie"
        android:text="@string/btn_add"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/btnCancel"
        app:layout_constraintStart_toStartOf="@id/btnCancel"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/btn_back"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>